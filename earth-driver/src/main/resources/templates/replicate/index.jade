doctype html
html(lang="en")
  include ../includes/head.jade
  body
    header
      nav.blue-grey.darken-2
        div.container
          div.nav-wrapper
            a.brand-logo Status Overview
            ul#nav-mobile.right.hide-on-med-and-down
              li: a(href="/") Home
              li: a(href="/syncs") Syncs
              li: a(href="/replications") Replications
    div.container
      div.row
        table.narrow.bordered.highlight
          thead
            tr
              th Id
              th From
              th Received
              th Extracted
              th Validated
              th Pushed
              th Details
          tbody
            each repl in replications
              tr
                td=repl.id
                td=repl.node
                td=repl.received
                td=repl.extracted
                td=repl.validated
                td=repl.pushed
                td: a(href="/replications/" + repl.id) View Details


